<% include ../partials/header %>

<div class="container">
    <div class="row aligning camp">
        <div class="col">
            <h1 >Create a New Campground!</h1>
        </div>
    </div>
    <div class="row new camp">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campName" placeholder="Camp Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campPrice" placeholder="Camp Price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campImage" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campDescription" placeholder="Description">
            </div>
            <button type="submit" class="btn btn-secondary btn-block">Submit</button>
        </form>
    </div>
</div>
<a class="landing" href="/campgrounds">Go Back</a>
<% include ../partials/footer %>